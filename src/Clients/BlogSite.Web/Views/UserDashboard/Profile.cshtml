@using BlogSite.Common.DTOs.UserBase;
@model UserDto

@{
    Layout = "_UserDashboardLayout";
}

@using (Html.BeginForm("Profile", "UserDashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.IsActive)
    @Html.HiddenFor(x => x.Image)
    @Html.HiddenFor(x => x.CreatedDate)

    @Html.AntiForgeryToken()

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">About Me</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                @Html.Label(null,"İsim", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label(null,"Kullanıcı İsmi", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label(null,"Meslek", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label(null,"Mail", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(x => x.Mail, new { htmlAttributes = new { @class = "form-control", @type = "mail" } })
                                @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label(null,"Şifre", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger"  })
                            </div>
                            <div class="form-group">
                                @Html.Label(null,"Hakkımda", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.TextAreaFor(x => x.About, new { @class = "form-control", rows = "4", cols = "40" })
                                @Html.ValidationMessageFor(x => x.About, "", new { @class = "text-danger" })
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    @Html.Label(null,"Profil Resmi", htmlAttributes: new { @class = "control-label col-md-8" })

                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="avatarImage" name="avatarImage" onchange="previewImage(event,'preview')">
                                            <label class="custom-file-label" for="exampleInputFile">Avatar</label>
                                        </div>

                                    </div>
                                </div>
                                <div>
                                    <img id="preview" src="#" alt="Resim önizleme" style="display:none; height:50px; width:50px; margin:25px; margin-left:30px;" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <input type="submit" value="Kaydet" class="btn btn-danger float-right">
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
}