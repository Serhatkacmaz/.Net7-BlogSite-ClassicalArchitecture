@using BlogSite.Core.DTOs.UserBase;
@model UserDto

@{
    Layout = "_UserDashboardLayout";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.IsActive)

    @Html.AntiForgeryToken()

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <!-- Profile Image -->
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle"
                                     src="~/adminLTE/dist/img/user4-128x128.jpg"
                                     alt="User profile picture">
                            </div>

                            <h3 class="profile-username text-center">@Model.UserName</h3>

                            <p class="text-muted text-center">@Model.Title</p>

                            <ul class="list-group list-group-unbordered mb-3">
                                <li class="list-group-item">
                                    <b>Blog</b> <a class="float-right">1,322</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Like</b> <a class="float-right">543</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Dislike</b> <a class="float-right">13,287</a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <div class="col-md-9">
                    <!-- About Me Box -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">About Me</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <strong><i class="far fa-file-alt mr-1"></i> Notes</strong>
                            <p class="text-muted">@Model.About</p>
                            <hr>

                            <strong><i class="fas fa-map-marker-alt mr-1"></i> Hesap Oluşturulma Tarihi</strong>
                            <p class="text-muted">@Model.CreatedDate</p>
                            <hr>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
        <!-- /.row -->
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
}