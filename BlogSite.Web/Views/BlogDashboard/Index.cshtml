@model List<BlogDashboardViewModel>
@{
    Layout = "_DashboardLayout";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <input type="submit" value="Yeni Blog Ekle" class="btn btn-success float-right">
        </div>
    </div>
    <br />
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Bloglar</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 5%">
                                #
                            </th>
                            <th style="width: 35%">
                                Blog İsmi
                            </th>
                            <th style="width: 20%" class="text-center">
                                Durum
                            </th>
                            <th style="width: 20%" class="text-center">
                                Tarih
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                #
                            </td>
                            <td>
                                <a>@item.Name</a>
                            </td>
                            @if (item.IsActive)
                            {
                                <td class="project-state">
                                    <span class="badge badge-success">Aktif</span>
                                </td>
                            }
                            else
                            {
                                <td class="project-state">
                                    <span class="badge badge-danger">Pasif</span>
                                </td>
                            }
                            <td class="project-state">
                                <span class="badge badge-info">@item.CreatedDate.ToShortDateString()</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="#">
                                    <i class="fas fa-folder"></i>
                                    Görüntüle
                                </a>
                                <a class="btn btn-info btn-sm" href="#">
                                    <i class="fas fa-pencil-alt"></i>
                                    Düzenle
                                </a>
                                <a class="btn btn-warning btn-sm" href="#">
                                    <i class="fas fa-trash"></i>
                                    Pasif
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        }
    </div>
    <!-- /.card -->
    @if (Model.Count == 0)
    {
        <center><h6>Blog yazmaya ne dersin?</h6></center>
    }
</section>
<!-- /.content -->